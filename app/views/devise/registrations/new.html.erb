<h1 class="text-center"><%= t('simple_event_manager') %></h1>
<h2 class="text-center"><%= t('sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'util/error_messages', model: resource %>

  <div class="form-group">
    <%= f.label :email, t('email') %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
      <%= f.label :password, t('password_minimum', quantity: @minimum_password_length) %>
    <% else %>
      <%= f.label :password, t('password') %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t('password_confirmation') %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('sign_up'), class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>

<div class="text-center margin-top-sm">
  <%= link_to t('back_to_sign_in'), new_session_path(resource_name) %><br />
</div>
