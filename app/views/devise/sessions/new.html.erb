<h1 class="text-center"><%= t('simple_event_manager') %></h1>
<h2 class="text-center"><%= t('sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render 'util/messages' %>

  <div class="form-group">
    <%= f.label :email, t('email') %>
    <%= f.email_field :email, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, t('password') %>
    <%= f.password_field :password, required: true, autocomplete: "off", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <%= t('remember_me') %>
      <% end %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t('sign_in'), class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>

<div class="text-center margin-top-sm">
  <%= link_to t('sign_up'), new_registration_path(resource_name) %><br />
</div>
